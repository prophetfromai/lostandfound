{
  "rules": {
    "maxFileLength": {
      "enabled": true,
      "maxLines": 300,
      "message": "Files should not exceed 300 lines. Consider refactoring into smaller components or modules."
    },
    "noDuplicateCode": {
      "enabled": true,
      "message": "Avoid code duplication. Look for existing similar functionality before implementing new code."
    },
    "environmentAwareness": {
      "enabled": true,
      "message": "Code should be environment-aware (dev, test, prod). No mock data in dev/prod environments."
    },
    "noScriptFiles": {
      "enabled": true,
      "message": "Avoid creating script files for one-time operations. Use terminal commands instead."
    },
    "cleanCode": {
      "enabled": true,
      "message": "Maintain clean and organized code structure. Follow consistent patterns."
    },
    "simpleSolutions": {
      "enabled": true,
      "message": "Prefer simple solutions over complex ones. Avoid over-engineering."
    },
    "noMockData": {
      "enabled": true,
      "message": "Mock data should only be used in tests, never in dev or prod environments."
    },
    "noStubbing": {
      "enabled": true,
      "message": "Avoid stubbing or fake data patterns in dev/prod code."
    },
    "envFileProtection": {
      "enabled": true,
      "message": "Never overwrite .env files without explicit confirmation."
    },
    "existingPatterns": {
      "enabled": true,
      "message": "When fixing issues, first exhaust all options using existing patterns before introducing new ones."
    }
  },
  "ignorePatterns": [
    "node_modules/**",
    "dist/**",
    "build/**",
    ".git/**",
    "*.min.js",
    "*.min.css"
  ]
} 